// -------------------------------------------
// 4. IF/ELSE STATEMENTS
// -------------------------------------------
Print("\n--- If/Else Statements ---");

var score = 85;

If (score >= 90) {
    Print("Grade A");
} Else {
    If (score >= 80) {
        Print("Grade B");
    } Else {
        If (score >= 70) {
            Print("Grade C");
        } Else {
            Print("Grade F");
        }
    }
}

// Nested if
var age = 25;
If (age >= 18) {
    Print("Adult");
    If (age >= 60) {
        Print("Senior Citizen");
    }
} Else {
    Print("Minor");
}

// -------------------------------------------
// 5. LOOPS
// -------------------------------------------
Print("\n--- Loops ---");

// While loop
Print("While Loop:");
var counter = 1;
While (counter <= 3) {
    Print("  Iteration " + counter);
    counter = counter + 1;
}

// For loop
Print("For Loop:");
For (var i = 1; i <= 3; i = i + 1) {
    Print("  Iteration " + i);
}

// Loop (simple counter)
Print("Simple Loop:");
Loop(3) {
    Print("  Loop iteration");
}

// Nested loops
Print("Nested Loops:");
Loop(2) {
    Print("  Outer loop");
    Loop(2) {
        Print("    Inner loop");
    }
}

