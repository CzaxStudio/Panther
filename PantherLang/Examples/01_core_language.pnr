// -------------------------------------------
// 2. ARITHMETIC OPERATIONS
// -------------------------------------------
Print("\n--- Arithmetic ---");

var x = 10;
var y = 3;

var sum = x + y;
var difference = x - y;
var product = x * y;
var quotient = x / y;
var modulus = x % y;

Print(x + " + " + y + " = " + sum);
Print(x + " - " + y + " = " + difference);
Print(x + " * " + y + " = " + product);
Print(x + " / " + y + " = " + quotient);
Print(x + " % " + y + " = " + modulus);

// -------------------------------------------
// 3. STRING OPERATIONS
